---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Nouncil">
  <Header />
  <main class="h-full w-full flex flex-col items-center justify-between">
    <div class="flex h-full items-center justify-center">
      <h1 class="text-[8rem] font-semibold text-black font-crimson-pro">
        The Nouncil
      </h1>
    </div>

    <img
      src="/graphic.webp"
      alt="Nouncil artwork by Messhup"
      draggable={false}
      class="select-none w-[600px] object-contain"
    />
  </main>
</Layout>
